<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/row_playerbygoals_club_logo"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/row_playerbygoals_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/row_playerbygoals_club_logo"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/row_playerbygoals_goals"
        android:layout_toRightOf="@id/row_playerbygoals_name"
        />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/row_playerbygoals_goals"
        android:id="@+id/row_playerbygoals_profilebutton"
        android:text="profil"
        />

</RelativeLayout>