<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/row_player_club_logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_player_name"
        android:textSize="8sp"
        android:layout_toRightOf="@id/row_player_club_logo"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/row_player_available"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/row_player_name"
        android:id="@+id/row_player_circlebutton"
        android:text="profil"
        />

</RelativeLayout>