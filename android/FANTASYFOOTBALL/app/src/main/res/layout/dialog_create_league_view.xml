<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nom : "
        android:id="@+id/create_league_dialog_name_textview"
        />

    <EditText
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/create_league_dialog_name_textview"
        android:id="@+id/create_league_dialog_name_edittext"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:layout_toRightOf="@id/create_league_dialog_name_edittext"
        android:id="@+id/create_league_dialog_check_available_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capacite : "
        android:layout_marginTop="30dp"
        android:layout_below="@id/create_league_dialog_name_textview"
        android:id="@+id/create_league_dialog_maximum_capacity_textview"
        />

    <EditText
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_below="@id/create_league_dialog_name_textview"
        android:layout_alignBaseline="@id/create_league_dialog_maximum_capacity_textview"
        android:layout_toRightOf="@id/create_league_dialog_maximum_capacity_textview"
        android:id="@+id/create_league_dialog_maximum_capacity_edittext"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visibilite : "
        android:layout_marginTop="30dp"
        android:layout_below="@id/create_league_dialog_maximum_capacity_textview"
        android:id="@+id/create_league_dialog_visibility_textview"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/create_league_dialog_maximum_capacity_textview"
        android:layout_alignBaseline="@id/create_league_dialog_visibility_textview"
        android:layout_toRightOf="@id/create_league_dialog_visibility_textview"
        android:id="@+id/create_league_dialog_visibility_togglebutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creer"
        android:layout_below="@id/create_league_dialog_visibility_textview"
        android:id="@+id/create_league_dialog_create_button"
        />

    </RelativeLayout>